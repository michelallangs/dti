<div class="box main-panel">
	<%= render "shared/main_menu" %>

	<div class="main-container">
		<div class="row">
			<div class="col">
				<header class="container-header">
					<h1 class="header-title">Cadastrar <span>unidade</span></h1>

					<div class="actions">
		      	<%= link_to "#", onclick: "$('.form').submit()", data: { disable_with: "Aguarde..." }, class: "btn-success icon" do %><span class="material-icons md-16 md-light">done</span>Finalizar<% end %>
		        <%= link_to schools_path, class: "btn-cancel icon" do %><span class="material-icons md-16">undo</span>Voltar<% end %>
		      </div>
				</header>
			</div>
		</div>

		<div class="row">
			<div class="col">
				<section class="container-body">
		    	<%= flash_message %>

					<%= simple_form_for @user, url: new_school_path, html: { class: "form" } do |f| %>
			      <%= f.simple_fields_for :school do |s| %>
			        <div class="row">
                <div class="col-12">
                  <%= s.input :segment, label: "Segmento", as: :radio_buttons, collection: list_segments, label_html: { class: "form-label" } %>
                </div>
              </div>

             	<div class="row">
	              <div class="col-12 col-lg-8 col-md-6">
	              	<%= s.input :name, label: "Nome da unidade", label_html: { class: "form-label" }, wrapper_html: { class: "name" }, input_html: { placeholder: "Ex.: NOME USUAL - Nome completo"} %>
	              </div>

	              <div class="col-12 col-lg-4 col-md-6">
	                <%= s.input :zip_code, label: "CEP", label_html: { class: "form-label" }, wrapper_html: { class: "zip-code" }, input_html: { placeholder: "Ex.: 12345-678", maxlength: 8 } %>
	              </div>
	            </div>

	            <div class="row">
                <div class="col-12 col-lg-5">
                  <%= s.input :address, label: "Logradouro", label_html: { class: "form-label" }, input_html: { placeholder: "Ex.: Rua Um Dois de Oliveira Quatro"} %>
                </div>

                <div class="col-12 col-lg-2">
                  <%= s.input :address_number, as: :numeric, label: "Número", label_html: { class: "form-label" } %>
                </div>

                <div class="col-12 col-lg-3">
                  <%= s.input :district, label: "Bairro", label_html: { class: "form-label" }, wrapper_html: { class: "district" } %>
                </div>

                <div class="col-12 col-lg-2">
                  <%= s.input :phone, label: "Telefone", label_html: { class: "form-label" }, input_html: { placeholder: "Ex.: (00) 91234-5678", maxlength: 30} %>
                </div>
              </div>

              <h3 class="m-t-50 m-b-15 uppercase">Estes serão os dados de acesso da unidade ao sistema</h3>

              <div class="row">
                <div class="col-12">
                  <%= f.input :username, label: "E-mail da unidade", label_html: { class: "form-label" }, input_html: { placeholder: "unidade@email.com"} %>
                </div>
              </div>

              <div class="row">
                <div class="col-12">
                  <%= f.input :password, label: "Senha", label_html: { class: "form-label" }, hint: ("mínimo de #{@minimum_password_length} caracteres" if @minimum_password_length), input_html: { placeholder: "**********"} %>
                </div>
              </div>

              <div class="row">
                <div class="col-12">
                  <%= f.input :password_confirmation, label: "Confirme a senha", label_html: { class: "form-label" }, input_html: { placeholder: "**********"} %>
                </div>
			        </div>
			      <% end %>
			    <% end %>
				</section>
			</div>
		</div>
	</div>
</div>
