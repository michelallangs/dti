<% unless orders.nil? || orders.blank? %>
	<%= content_tag :div, class: "hidden-scrollbar" do %>
		<%= content_tag :div, class: "order-container #{get_status(status)}" do %>
			<%= content_tag :h4, class: "order-status-title" do %><%= status[/(.*)\s/,1] %> <span><%= status.split().last %></span><% end %>

			<div class="order-cards">
				<% orders.each do |order| %>
					<%= content_tag :div, class: "order-card #{get_status(order.status)}" do %>
						<header class="order-card-header">
							<div class="left-content">
								<%= content_tag :span, "##{order.id.to_s.rjust(3, '0')}", class: "order-id" %>
								<%= content_tag :span, order.spot, class: "order-spot" %>
							</div>

							<div class="right-content">
								<%= content_tag :span, order.created_at, class: "order-creation-date" %>
							</div>
						</header>

						<div class="order-card-body">
							<%= content_tag :h3, "#{order.stuff.category} #{get_patrimony(order.stuff.patrimony)}" %>
							<%= content_tag :span, order.o_type if order.o_type %>
							<%= content_tag :div, order.defect.to_s.html_safe, class: "order-defect limited-text" %>
						</div>

						<%= content_tag :footer, class: "order-card-footer" do %>
							<%= content_tag :span, is_admin?(current_user) ? order.school_name : "" %>
							<div class="options">

								<% if order.maintenance_technicians != [""] %>
									<span class="material-icons md-20 order-card-users tooltip-toggle" data-tooltip="<%= get_user(order.maintenance_technicians) %>" title="<%= get_user(order.maintenance_technicians) %>">
										<%= order.maintenance_technicians.length > 2 ? "group" : "person" %>
									</span>
								<% end %>

								<%= link_to "#", class: "options-btn" do %><span class="material-icons md-20">more_vert</span><% end %>
								<ul>
									<li><%= link_to "Imprimir OS", print_order_path(order), target: "_blank"  %></li>
									<li><%= link_to "Ver detalhes", order_path(order) %></li>
									<li><%= link_to "Editar", edit_order_path(order) %></li>
									<li><%= link_to "Cancelar OS", destroy_order_path(order), method: :delete, data: { confirm: "Tem certeza? Essa ação é irreversível." } %></li>
								</ul>
							</div>
						<% end %>
					<% end %>
				<% end %>
			</div>
		<% end %>
	<% end %>
<% end %>
