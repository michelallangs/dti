<div class="box main-panel">
  <%= render "shared/main_menu" %>

  <div class="main-container">
    <%= flash_message %>

    <div class="row">
      <div class="col">
        <header class="container-header">
          <h1 class="header-title">Editar dados do <span>usuário</span></h1>

          <div class="actions">
            <%= link_to edit_user_password_path(@user), class: "btn-warning icon" do %><span class="material-symbols-outlined md-16">key</span>Trocar senha<% end %>
            <%= link_to "#", onclick: "$('.form').submit()", data: { disable_with: "Aguarde..." }, class: "btn-success icon" do %><span class="material-symbols-outlined md-16 md-light">done</span>Salvar<% end %>
            <%= link_to users_path, class: "btn-cancel icon" do %><span class="material-symbols-outlined md-16">undo</span>Voltar<% end %>
          </div>
        </header>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <section class="container-body">
          <%= simple_form_for @user, url: edit_user_path, html: { class: "form" } do |f| %>
            <div class="row">
              <div class="col-12 col-md-6">
                <%= f.input :name, label: "Nome completo", label_html: { class: "form-label" }, input_html: { placeholder: "Fulaninho de Tal"} %>
              </div>

              <div class="col-12 col-md-6">
                <%= f.input :email, label: "E-mail", label_html: { class: "form-label" }, input_html: { placeholder: "usuario@email.com"} %>
              </div>
            </div>

            <div class="row">
              <div class="col-12 col-md-6">
                <%= f.input :username, label: "Nome de usuário", label_html: { class: "form-label" }, input_html: { placeholder: "fulaninhodetal"} %>
              </div>

              <div class="col-12 col-md-6">
                <%= f.input :is_technician, label: "Este usuário é técnico?", collection: ["Sim", "Não"], include_blank: false, label_html: { class: "form-label" }, wrapper_html: { class: "custom-select" } %>
              </div>
            </div>
          <% end %>
        </section>
      </div>
    </div>
    
  </div>
</div>
