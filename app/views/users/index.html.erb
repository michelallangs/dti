<div class="row">
	<div class="col">
		<header class="container-header">
			<h1 class="header-title">Lista de <span>usuários</span> <i id="registered-data"><%= render "shared/registered_data", paginate: @users_paginate %></i></h1>

			<div class="right-content">
				<div class="action-buttons">
					<%= link_to "#", alt: "Mostrar opções de pesquisa", title: "Mostrar opções de pesquisa", class: "btn-icon enable-filters" do %><span class="material-symbols-outlined md-16">search</span><% end %>
					<%= link_to new_user_path, class: "btn-success icon" do %><span class="material-symbols-outlined md-16 md-light">add</span>Cadastrar usuário<% end %>
				</div>
			</div>
		</header>
	</div>
</div>

<%= form_tag(users_path, method: :get, class: "filters form") do %>
	<div class="row">
		<div class="col-lg-3 col-md-6 col-sm-12">
			<div class="custom-select">
				<%= select_tag :limit, options_for_select(["5", "10", "20", "50", "100"], selected: params[:limit]), include_blank: "Itens por página..." %>
			</div>
		</div>
		
		<div class="col-12 col-sm-6 col-lg-3">
			<div class="search" id="autocomplete-name">
				<%= autocomplete_field_tag :name, params[:name], autocomplete_user_name_users_path, placeholder: "Nome", append_to: "#autocomplete-name",'data-showNoMatches' => false %>
			</div>
		</div>

		<div class="col-lg-3 col-md-6 col-sm-12">
			<div class="search">
				<%= search_field_tag :username, params[:username], placeholder: "Nome de usuário" %>
			</div>
		</div>

		<div class="col-lg-3 col-md-6 col-sm-12">
			
			<div class="search">
				<%= search_field_tag :email, params[:email], placeholder: "E-mail" %>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-12 text-center">
			<%= link_to users_path, class: "btn-cancel" do %>Limpar filtros<% end %>
		</div>
	</div>

	<%= submit_tag ("Buscar") %>
<% end %>

<div class="row">
	<div class="col">
		<section class="container-body" id="users-data">
			<%= render 'users' %>
		</section>
	</div>
</div>